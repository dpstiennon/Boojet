@model Boojet.Models.BudgetVM

@section scripts{
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div ng-app="boojet">
    <nav class="money-green navbar navbar-default navbar-static-top">
        <div class="container">
            <ul class="nav navbar-nav nav-main-list">
                <ul class="navbar-nav navbar-left">
                    <li id="calendar" class="header-icon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </li>
                </ul>
                <calendar year="2017" month="2"></calendar>
                <ul class="navbar-nav navbar-right">
                    <li id="settings" class="header-icon">
                        <span class="glyphicon glyphicon-cog"></span>
                    </li>
                </ul>
            </ul>
        </div>
    </nav>
    <div class="container" ng-controller="FinanceController as financeCtrl">
        <div class="row">
            <div class="col-md-6">
                <recurring-expenses sum="financeCtrl.totalRegulars"></recurring-expenses>
                <incomes sum="financeCtrl.totalIncomes" ></incomes>
            </div>
            <div class="col-md-6">
                    <budgets sum="financeCtrl.totalBudgets"></budgets>
                    <irregulars sum="financeCtrl.totalIrregulars"></irregulars>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <totals totals="financeCtrl.getTotals()"></totals>
            </div>
        </div>
    </div>
</div>
</body>
</html>